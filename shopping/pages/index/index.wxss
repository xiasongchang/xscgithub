/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/** 轮播 **/
.slide-image {
  width: 100%;
}

/** 分类 **/
.navs {
display: flex;
}
.nav-item {
width: 25%;
display: flex; 
align-items: center;
flex-direction: column;

padding: 20rpx;
}
.nav-item .nav-image {
width: 90rpx;
height: 90rpx;
border-radius: 50%;
}
.nav-item text {
padding-top: 20rpx;
font-size: 25rpx;
} 

/** 商城客户 **/
.zi{
  margin-top:30px;
  font-size : 20px;
  color: gray;
}
.customer {
  display: flex;
}
.custo-item {
  width: 25%;
  display: flex; 
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.custo-item .custo-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.custo-item text {
  padding-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
} 
/***精选促销***/
.promotion {
  display: inline-flexflex;
}
.promo-item {
  width: 25%;
  display: inline-flex; 
  align-items: center;
  flex-direction: column;
  padding: 30rpx;
}
.promo-item .promo-image {
  width: 200rpx;
  height: 200rpx;
}
.promo-item text {
  padding-top: 20rpx;
  font-size: 26rpx;
} 
.promo-item text jia {
  color: red;
  font-size: 30rpx;
} 





